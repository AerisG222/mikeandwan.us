@{ Layout = "_LayoutMinimal"; }
@{ ViewBag.AuthBg = "auth_bg"; }

@section custom_head {
	@await RenderSectionAsync("custom_head", required: false)
	@await Html.PartialAsync("_Favicons")
	<meta name="theme-color" content="#272b30">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tangerine:bold" />
	@await Html.PartialAsync("_css_site")
	@await RenderSectionAsync("stylesheets", required: false)
	@await RenderSectionAsync("scripts_head", required: false)
}

@RenderBody()

@await Html.PartialAsync("_js_Bootstrap")
@await RenderSectionAsync("scripts_footer", required: false)
