@using MawMvcApp.ViewModels.Admin
@model EditRoleMembersModel
@{ ViewBag.Title = "admin | edit role members"; }

<h1>Edit Role Members</h1>

@Html.Partial("_identityResult", new IdentityResultModel("user role assignments", Model.Result))

<p>
	Select what users should belong to the role <strong>@Model.Role</strong>.
</p>

<form asp-controller="admin" asp-action="editrolemember" method="post" autocomplete="off" role="form">
	<input asp-for="Role" type="hidden" />

	<div class="row">
	    <div class="col-sm-6">
			<table class="table table-responsive table-striped table-hover table-sm">
				<thead>
					<tr>
						<th>User</th>
						<th>Member</th>
					</tr>
				</thead>
				<tbody>
				@foreach(var user in Model.AllUsers) {
					<tr>
						<td>@user</td>
						<td>
							<div class="d-flex justify-content-center">
								<input class="form-check-input" type="checkbox" name="NewMembers" value="@user" @if(Model.Members.Contains(@user)) { <text>CHECKED</text> } />
							</div>
						</td>
					</tr>
				}
				</tbody>
			</table>
	    </div>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
