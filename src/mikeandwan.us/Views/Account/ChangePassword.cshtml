@model MawMvcApp.ViewModels.Account.ChangePasswordModel
@{ ViewBag.Title = "account | change password"; }

@Html.Partial("_PageHeader", "Change Password")

@if(Model.ChangeSucceeded) {
	<p maw-alert-type="Success">Your password was updated successfully.</p>
}
else {
	if(Model.ChangeAttempted) {
		<p maw-alert-type="Danger">There was an error updating your password.</p>
		<div asp-validation-summary="All" class="text-danger"></div>
	}	

	<form asp-controller="account" asp-action="changepassword" method="post" class="form-horizontal" autocomplete="off" role="form">
		<div class="form-group" maw-for="@Model.CurrentPassword">
			<label asp-for="CurrentPassword" class="col-sm-3 control-label"></label>
	        <div class="col-sm-6">
				<input asp-for="CurrentPassword" class="form-control" autofocus="" />
	        </div>
		</div>
	    <div class="form-group" maw-for="@Model.NewPassword">
			<label asp-for="NewPassword" class="col-sm-3 control-label"></label>
	        <div class="col-sm-6">
				<input asp-for="NewPassword" class="form-control" />
	        </div>
		</div>
	    <div class="form-group" maw-for="@Model.ConfirmPassword">
			<label asp-for="ConfirmPassword" class="col-sm-3 control-label"></label>
	        <div class="col-sm-6">
			    <input asp-for="ConfirmPassword" class="form-control" />
	        </div>
		</div>
		
	    <div class="form-group">
	        <div class="col-sm-offset-3 col-sm-2">
	            <button type="submit" class="btn btn-default">Submit</button>
	        </div>
	    </div>
	</form>
}