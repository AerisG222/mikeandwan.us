@using Microsoft.AspNetCore.Identity
@using MawAuth.ViewModels.Admin
@model CreateUserModel
@{ ViewBag.Title = "admin | create user"; }

<h1>Create User</h1>

@Html.Partial("_identityResult", new IdentityResultModel("user", Model.Result))

@if(Model.Result == null || !Model.Result.Succeeded) {
	<form asp-controller="admin" asp-action="createuser" method="post" autocomplete="off" role="form">
		<div class="form-group">
			<label asp-for="Username" class="col-form-label"></label>

			<div class="row">
				<div class="col-sm-5">
					<input asp-for="Username" class="form-control" autofocus="" />
					@*<span asp-validation-for="Username" class="form-text"></span>*@
				</div>
			</div>
		</div>
	    <div class="form-group">
			<label asp-for="FirstName" class="col-form-label"></label>

			<div class="row">
				<div class="col-sm-5">
					<input asp-for="FirstName" class="form-control" />
					@*<span asp-validation-for="FirstName" class="form-text"></span>*@
				</div>
			</div>
		</div>
	    <div class="form-group">
			<label asp-for="LastName" class="col-form-label"></label>

			<div class="row">
				<div class="col-sm-5">
					<input asp-for="LastName" class="form-control" />
					@*<span asp-validation-for="LastName" class="form-text"></span>*@
				</div>
			</div>
		</div>
	    <div class="form-group">
			<label asp-for="Email" class="col-form-label"></label>

			<div class="row">
				<div class="col-sm-5">
					<input asp-for="Email" class="form-control" />
					@*<span asp-validation-for="Email" class="form-text"></span>*@
				</div>
			</div>
		</div>

	    <div class="form-group">
			<button type="submit" class="btn btn-primary">Submit</button>
	    </div>
	</form>
}
