
@{ 
    Layout = "_LayoutSidebar";
    ViewBag.Title = "tools | binary clock";
}

@section custom_head {
    <base href="." />
}

@section scripts_footer {
    <script src="/js/binary_clock/vendor/es6-shim/es6-shim.js"></script>
    <script src="/js/binary_clock/vendor/reflect-metadata/Reflect.js"></script>
    <script src="/js/binary_clock/vendor/systemjs/dist/system.src.js"></script>
    <script src="/js/binary_clock/vendor/zone.js/dist/zone.js"></script>
    <script>
        SystemJS.config({
            baseURL: '/js/binary_clock'
        });

        System.import('system-config.js').then(function () {
            System.import('main');
        }).catch(console.error.bind(console));
    </script>
}

@section header {
    @Html.Partial("_PageHeader", "Binary Clock")
}

@section sidebar {
    @Html.Partial("_ToolSidebar", new SidebarModel() { Group = "binaryclock", Item = "binary-clock" })
}

<section>
    <binary-clock-app>Loading...</binary-clock-app>

    <p>
        If you are unfamiliar with this, take a look at the <a href="/tools/binary-clock-about">binary clock primer</a>.
    </p>    
</section>
