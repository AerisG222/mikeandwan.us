@model MawMvcApp.ViewModels.Account.ResetPasswordModel
@{ 
	ViewBag.Title = "account | reset password"; 
}

@Html.Partial("_PageHeader", "Reset Password")

@if(Model.WasReset) {
	<p maw-alert-type="Success">Your password was reset successfully.  You may now login with your new credentials.</p>
}
else {
	if(Model.ResetAttempted) {
		<p maw-alert-type="Danger">There was an error updating your password.</p>
		<div asp-validation-summary="All" class="text-danger"></div>
	}

	<p>
		Please enter your new password below.
	</p>

	<form asp-controller="account" asp-action="resetpassword" method="post" class="form-horizontal" autocomplete="off" role="form">
		<input asp-for="Code" type="hidden" />
	    <div class="form-group" maw-for="@Model.Email">
			<label asp-for="Email" class="col-sm-3 control-label"></label>
	        <div class="col-sm-5">
				<input asp-for="Email" class="form-control" autofocus="" />
	        </div>
		</div>
		<div class="form-group" maw-for="@Model.NewPassword">
			<label asp-for="NewPassword" class="col-sm-3 control-label"></label>
	        <div class="col-sm-5">
				<input asp-for="NewPassword" class="form-control" />
	        </div>
		</div>
	    <div class="form-group" maw-for="@Model.ConfirmPassword">
			<label asp-for="ConfirmPassword" class="col-sm-3 control-label"></label>
	        <div class="col-sm-5">
				<input asp-for="ConfirmPassword" class="form-control" />
	        </div>
		</div>

	    <div class="form-group">
	        <div class="col-sm-offset-3 col-sm-2">
	            <button type="submit" class="btn btn-default">Reset Password</button>
	        </div>
	    </div>
	</form>
}