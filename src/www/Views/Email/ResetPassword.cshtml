@model MawMvcApp.ViewModels.Email.ResetPasswordEmailModel
@{ Layout = "~/Views/Email/_Layout.cshtml"; }

<strong><font size="4">Reset Password</font></strong>

<p>
    If you initiated a password reset on <a href="https://www.mikeandwan.us"><font color="#c8c8c8">mikeandwan.us</font></a>, 
    please reset your password by clicking the link below.
</p>

<p align="center">
    <a href="@Model.CallbackUrl" style="display: inline-block;
    margin-bottom: 0;
    font-weight: normal;
    text-align: center;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    cursor: pointer;
    background-image: none;
    border: 1px solid transparent;
    white-space: nowrap;
    padding: 8px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    border-radius: 4px;
    border-color: rgba(0,0,0,0.6);
    background-color: #3a3f44; text-shadow: 1px 1px 1px rgba(0,0,0,0.3); 
    background-image: linear-gradient(#484e55, #3a3f44 60%, #313539);
    -webkit-appearance: button;
    margin: 0;"><font color="#ffffff">Reset Your Password</font></a>
</p>

<p>
    If you did not initiate this request, simply ignore this mail, and continue to login to the site with your current password.
    If you continue to see many attempts, that could suggest someone is trying to take over your account.  If so, consider updating
    your password to a more secure password to thwart those attempts.
</p>

<p>
    Thank you.
</p>
