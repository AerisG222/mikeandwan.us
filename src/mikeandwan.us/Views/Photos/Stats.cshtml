@{
    Layout = "_LayoutSinglePageApp";
    ViewBag.Title = "photos | stats";
}

@section custom_head {
    <base href="/" />
}

@section scripts_footer {
    <script type="text/javascript" src="/js/photo_stats/main.bundle.js"></script>
    <script type="text/javascript">
        $(function() {
            let stats = new Photos.PhotoStats();
            stats.run();
        });
    </script>
}

<div class="container">
    <article class="row">
        <div class="col-sm-12">
            <h1>Interactive Photo Statistics</h1>
            <div id="breadcrumbs"></div>
            <div id="categoryCount"></div>
            <div id="photoCount"></div>

            <div id="sunburst"></div>
        </div>
    </article>
</div>
