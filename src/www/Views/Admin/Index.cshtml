@{ ViewBag.Title = "admin"; }

<h1>Admin</h1>

<div class="row">
    <div class="col-sm-4">
        <div class="card mb-4">
            <div class="card-header">
                <strong class="card-title">Blog</strong>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item" asp-controller="admin" asp-action="createblogpost">Create Blog Post</a>
            </div>
        </div>
    </div>

    <div class="col-sm-4">
        <div class="card mb-4">
            <div class="card-header">
                <strong class="card-title">Security</strong>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item" maw-auth-url="/admin/">Manage Users / Roles</a>
            </div>
        </div>
    </div>

    <div class="col-sm-4">
        <div class="card mb-4">
            <div class="card-header">
                <strong class="card-title">Diagnostics</strong>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item" asp-controller="admin" asp-action="showrequestdetails">Show Request Details</a>
            </div>
        </div>
    </div>
</div>
