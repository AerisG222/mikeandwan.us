@{
    Layout = "_LayoutSidebar";
    ViewBag.Title = "reference | html doctypes";
}

@section header {
    <h1>HTML Doctypes</h1>
}

@section sidebar {
    @{
        var sidebarModel = new SidebarModel() { Group = "html", Item = "html-doctypes" };
    }
    <partial name="_ReferenceSidebar" model="sidebarModel" />
}

<p>
  This page provides a listing of proper markup document headers,
  based on the version of markup for the page.  For all new work, use HTML5.
</p>

<h2>HTML5</h2>
<pre>
    <code>
&lt;!doctype html&gt;
    </code>
</pre>

