  "main": "index.js",
  "dependencies": {
    "bootstrap": "^4.1.1",
    "bootswatch": "^4.1.1",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "node-sass": "^4.9.0",
    "node-sass-chokidar": "^1.2.2",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.1.0"
  },
  "scripts": {
    "sass": "npm run sass:lint & npm run sass:site & npm run sass:games",
    "sass:lint": "stylelint scss/*.scss --syntax scss & exit 0",
    "sass:site": "node-sass --output wwwroot/css --include-path node_modules scss/site.scss",
    "sass:games": "node-sass --output wwwroot/css --include-path node_modules scss/games.scss",
    "sass:watch": "chokidar 'scss/**/*.scss' -c 'npm run sass'"
  },
