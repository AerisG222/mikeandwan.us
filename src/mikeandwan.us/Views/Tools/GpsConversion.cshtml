@using MawMvcApp.ViewModels.Gps
@model GpsConversionModel
@{ 
    Layout = "_LayoutSidebar";
    ViewBag.Title = "tools | gps converter"; 
}

@section header {
    @Html.Partial("_PageHeader", "GPS Conversions")
}

@section sidebar {
    @Html.Partial("_ToolSidebar", new SidebarModel() { Group = "general", Item = "gps-conversion" })
}

<p>
This page allows you to convert between different GPS coordinate representations.
</p>

@if(!Html.ViewData.ModelState.IsValid) {
    <div class="alert alert-danger">
        Please fix the errors listed below:
        <div asp-validation-summary="All"></div>
    </div>
}

<form asp-controller="tools" asp-action="gpsconversion" method="post" class="form-horizontal" autocomplete="off" role="form">
    <div class="panel  panel-default">
        <div class="panel-heading">
	        <h3 class="panel-title">Degrees Minutes Seconds Format</h3>
	    </div>
	    <div class="panel-body">
            <input type="hidden" name="ConversionMode" value="@GpsConversionMode.FromDegreesMinutesSeconds" />
            <div class="form-group">
                <label class="col-xs-offset-2 col-xs-2 control-label">Degrees</label>
                <label class="col-xs-2 control-label">Minutes</label>
                <label class="col-xs-2 control-label">Seconds</label>
                <label class="col-xs-2 control-label">Reference</label>
                <label class="col-xs-2 control-label">Formatted</label>
            </div>
            <div class="form-group">
                <label class="col-xs-2 control-label">Latitude</label>
                <div class="col-xs-2">
                    <input asp-for="DmsLatDegrees" class="form-control input-sm" step="any" autofocus="" />
                </div>
                <div class="col-xs-2">
                    <input asp-for="DmsLatMinutes" class="form-control input-sm" step="any" />
                </div>
                <div class="col-xs-2">
                    <input asp-for="DmsLatSeconds" class="form-control input-sm" step="any" />
                </div>
                <div class="col-xs-2">
                    <select class="form-control input-sm" asp-for="DmsLatReference" asp-items="@Html.GetEnumSelectList<LatitudeReference>()"></select>
                </div>
                <label class="col-xs-2 control-label">@Model.DmsLatString</label>
            </div>
            <div class="form-group">
                <label class="col-xs-2 control-label">Longitude</label>
                <div class="col-xs-2">
                    <input asp-for="DmsLngDegrees" class="form-control input-sm" step="any" />
                </div>
                <div class="col-xs-2">
                    <input asp-for="DmsLngMinutes" class="form-control input-sm" step="any" />
                </div>
                <div class="col-xs-2">
                    <input asp-for="DmsLngSeconds" class="form-control input-sm" step="any" />
                </div>
                <div class="col-xs-2">
                    <select class="form-control input-sm" asp-for="DmsLngReference" asp-items="@Html.GetEnumSelectList<LongitudeReference>()"></select>
                </div>
                <label class="col-xs-2 control-label">@Model.DmsLngString</label>
            </div>
    
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-2">
                    <button type="submit" class="btn btn-default">Convert From Degrees, Minutes and Seconds</button>
                </div>
            </div>
        </div>
    </div>
</form>

