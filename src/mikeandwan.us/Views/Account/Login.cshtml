@model MawMvcApp.ViewModels.Account.LoginModel
@{ 
	Layout = "_Layout";
	ViewBag.Title = "account | login"; 
}

@Html.Partial("_PageHeader", "Login")

<div class="row">
    <div class="col-sm-5">
        @if(Model.WasAttempted) {
            <p maw-alert-type="Danger">There was an error logging in.  Please try again.</p>
        }

        <form asp-controller="account" asp-action="login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" autocomplete="off" role="form">
            <div class="form-group" maw-for="@Model.Username">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" autofocus="" />
                <span asp-validation-for="Username" class="help-block"></span>
            </div>

            <div class="form-group" maw-for="@Model.Password">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="help-block"></span>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
                <div class="col-sm-5 col-sm-offset-2">
                    <a asp-controller="account" asp-action="forgotpassword" class="pull-right">Forgot Password?</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-5 col-sm-offset-2">
        <div class="row">
            <div class="col-sm-12">
                <strong>or, login with an external account:</strong>
            </div>
        </div>
        <div class="row">
        @foreach(var scheme in Model.ExternalSchemes) {
            <div class="col-sm-6 ext_auth">
                <a href="/account/external-login?provider=@scheme.ExternalAuth.AuthenticationScheme" class="btn btn-default">@if(scheme.Icon != null) {<svg-icon class="icon" icon="@((SvgIcon)scheme.Icon)"></svg-icon> }@scheme.ExternalAuth.DisplayName</a>
            </div>
        }
        </div>
    </div>
</div>
