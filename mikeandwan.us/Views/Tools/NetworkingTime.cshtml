@{ 
    Layout = "_LayoutSidebar";
    ViewBag.Title = "tools | networking | time"; 
}

@section custom_head {
    <base href="." />
}

@section scripts_footer {
    <script src="/js/time/vendor/es6-shim/es6-shim.js"></script>
    <script src="/js/time/vendor/reflect-metadata/Reflect.js"></script>
    <script src="/js/time/vendor/systemjs/dist/system.src.js"></script>
    <script src="/js/time/vendor/zone.js/dist/zone.js"></script>
    <script>
        SystemJS.config({
            baseURL: '/js/time'
        });

        System.import('system-config.js').then(function () {
            System.import('main');
        }).catch(console.error.bind(console));
    </script>
}

@section header {   
    @Html.Partial("_PageHeader", "Time Calculator")
}

@section sidebar {
    @Html.Partial("_ToolSidebar", new SidebarModel() { Group = "networking", Item = "networking-time" })
}

