@using MawMvcApp.ViewModels.Admin
@model EditRoleMembersModel
@{ ViewBag.Title = "admin | edit role members"; }

@Html.Partial("_PageHeader", "Edit Role Members")

@Html.Partial("_identityResult", new IdentityResultModel("user role assignments", Model.Result))

<p>
	Select what users should belong to the role <strong>@Model.Role</strong>.
</p>

<form asp-controller="admin" asp-action="editrolemember" method="post" class="form-horizontal" autocomplete="off" role="form">
	<input asp-for="Role" type="hidden" />

	<div class="row">
	    <div class="col-xs-6">
	        <div class="table-responsive">
			    <table class="table table-striped table-hover table-condensed">
					<thead>
						<tr>
							<th>User</th>
							<th>Member</th>
						</tr>
					</thead>
					<tbody>
					@foreach(var user in Model.AllUsers) {
						<tr>
							<td>@user</td>
							<td><input type="checkbox" name="NewMembers" value="@user" @if(Model.Members.Contains(@user)) { <text>CHECKED</text> } /></td>
						</tr>
					}
					</tbody>
				</table>
			</div>
	    </div>
	</div>
	<div class="form-group">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
