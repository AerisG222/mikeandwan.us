@using Microsoft.AspNetCore.Mvc
@model MawMvcApp.ViewModels.Account.ProfileModel
@{ ViewBag.Title = "account | edit profile"; }

@Html.Partial("_PageHeader", "Manage Your Profile")

@if(Model.WasAttempted) {
    if(Model.WasUpdated) {
        <p maw-alert-type="Success">Your profile was updated.</p>
	}
	else {
        <p maw-alert-type="Danger">Your profile was not updated.</p>
	}
}

<form asp-controller="account" asp-action="editprofile" method="post" class="form-horizontal" autocomplete="off" role="form">
	<fieldset>
    	<legend>General</legend>
        <div class="form-group">
            <label asp-for="Username" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <label class="control-label">@Model.Username</label>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.FirstName">
            <label asp-for="FirstName" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
                <input asp-for="FirstName" class="form-control" autofocus="" />
                <span asp-validation-for="FirstName" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.LastName">
            <label asp-for="LastName" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.DateOfBirth">
            <label asp-for="DateOfBirth" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.Company">
            <label asp-for="Company" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="Company" class="form-control" />
                <span asp-validation-for="Company" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.Position">
            <label asp-for="Position" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="help-block"></span>
            </div>
    	</div>
	</fieldset>
	
	<fieldset>
    	<legend>Address</legend>
        <div class="form-group" maw-for="@Model.PersonalEmail">
            <label asp-for="PersonalEmail" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="PersonalEmail" class="form-control" />
                <span asp-validation-for="PersonalEmail" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.WorkEmail">
            <label asp-for="WorkEmail" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="WorkEmail" class="form-control" />
                <span asp-validation-for="WorkEmail" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.HomePhone">
            <label asp-for="HomePhone" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="HomePhone" class="form-control" />
                <span asp-validation-for="HomePhone" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.MobilePhone">
            <label asp-for="MobilePhone" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="MobilePhone" class="form-control" />
                <span asp-validation-for="MobilePhone" class="help-block"></span>
            </div>
    	</div>	  
        <div class="form-group" maw-for="@Model.WorkPhone">
            <label asp-for="WorkPhone" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="WorkPhone" class="form-control" />
                <span asp-validation-for="WorkPhone" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.Address1">
            <label asp-for="Address1" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="Address1" class="form-control" />
                <span asp-validation-for="Address1" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.Address2">
            <label asp-for="Address2" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="Address2" class="form-control" />
                <span asp-validation-for="Address2" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.City">
            <label asp-for="City" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.State">
            <label asp-for="State" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
                <select class="form-control" asp-for="State" asp-items="(IEnumerable<SelectListItem>)ViewBag.States"></select>
                <span asp-validation-for="State" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.PostalCode">
            <label asp-for="PostalCode" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.Country">
            <label asp-for="Country" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
                <select class="form-control" asp-for="Country" asp-items="(IEnumerable<SelectListItem>)ViewBag.Countries"></select>
                <span asp-validation-for="Country" class="help-block"></span>
            </div>
    	</div>
        <div class="form-group" maw-for="@Model.Website">
            <label asp-for="Website" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
    		    <input asp-for="Website" class="form-control" />
                <span asp-validation-for="Website" class="help-block"></span>
            </div>
    	</div>
	</fieldset>

    <fieldset>
    	<legend>Social Logins</legend>
        <p>
            If you have an account with one of the following systems, you can enable your account to use that
            system for logging in.  This might allow you to skip entering a username and password if you are already
            logged in to that system.
        </p>
        <p maw-alert-type="Info">
            To use this successfully, you <strong>must</strong> ensure that the email address on the social platform matches the
            email address for your mikeandwan.us account.  If this is not the case, <strong>please do not enable this option</strong>.
        </p>
        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="EnableGithubAuth" /> <svg-icon icon="Github" class="icon"></svg-icon> GitHub
                </label>
            </div>
        </div>
        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="EnableGoogleAuth" /> <svg-icon icon="GooglePlus" class="icon"></svg-icon> Google
                </label>
            </div>
        </div>
        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="EnableMicrosoftAuth" /> <svg-icon icon="Windows" class="icon"></svg-icon> Microsoft
                </label>
            </div>
        </div>
        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="EnableTwitterAuth" /> <svg-icon icon="Twitter" class="icon"></svg-icon> Twitter
                </label>
            </div>
        </div>
    </fieldset>
	
    <br />

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>