@using Microsoft.AspNetCore.Identity
@using MawAuth.ViewModels.Admin
@model CreateUserModel
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "admin | create user";
}

@section body_head {
    <strong>Create User</strong>
}

@section body_foot {
    <a asp-action="Index" asp-controller="Admin"><svg-icon icon="Cog"></svg-icon></a>
}

@await Html.PartialAsync("_identityResult", new IdentityResultModel("user", Model.Result))

@if(Model.Result == null || !Model.Result.Succeeded) {
	<form asp-controller="admin" asp-action="createuser" method="post" autocomplete="off" role="form">
		<div class="form-group">
			<div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <svg-icon icon="Person"></svg-icon>
                    </div>
                </div>
                <input asp-for="Username" class="form-control" autofocus="" placeholder="Username" />
                @*<span asp-validation-for="Username" class="form-text"></span>*@
			</div>
		</div>
	    <div class="form-group">
            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
            @*<span asp-validation-for="FirstName" class="form-text"></span>*@
		</div>
	    <div class="form-group">
            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
            @*<span asp-validation-for="LastName" class="form-text"></span>*@
		</div>
	    <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <svg-icon icon="At"></svg-icon>
                    </div>
                </div>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                @*<span asp-validation-for="Email" class="form-text"></span>*@
			</div>
		</div>

	    <div class="form-group">
			<button type="submit" class="btn btn-primary btn-block">Create User</button>
	    </div>
	</form>
}
