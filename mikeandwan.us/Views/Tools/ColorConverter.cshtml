
@model MawMvcApp.ViewModels.Tools.ColorConverterModel
@{ 
    Layout = "_LayoutSidebar";
    ViewBag.Title = "tools | color converter"; 
}

@section header {
    @Html.Partial("_PageHeader", "Color Converter")
}

@section sidebar {
    @Html.Partial("_ToolSidebar", new SidebarModel() { Group = "dotnet", Item = "color-converter" })
}

<p>This page allows you to translate between different color code formats.</p>

<form asp-controller="tools" asp-action="colorconverter" method="post" class="form-horizontal" autocomplete="off" role="form">
    <input type="hidden" asp-for="ConversionMode" value="FromHex" />
    <div class="form-group" maw-for="@Model.HexColorCode">
        <label asp-for="HexColorCode" class="col-sm-3 control-label"></label>
        <div class="col-sm-6">
            <input asp-for="HexColorCode" class="form-control" autofocus="" />
            <span asp-validation-for="HexColorCode" class="help-block"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
            <button type="submit" class="btn btn-default">Convert to RGBA</button>
        </div>
    </div>
</form>

<form asp-controller="tools" asp-action="colorconverter" method="post" class="form-horizontal" autocomplete="off" role="form">
    <input type="hidden" asp-for="ConversionMode" value="FromComponents" />
    <div class="form-group" maw-for="@Model.RedComponent">
        <label asp-for="RedComponent" class="col-sm-3 control-label"></label>
        <div class="col-sm-6">
            <input asp-for="RedComponent" class="form-control" />
            <span asp-validation-for="RedComponent" class="help-block"></span>
        </div>
    </div>
    <div class="form-group" maw-for="@Model.GreenComponent">
        <label asp-for="GreenComponent" class="col-sm-3 control-label"></label>
        <div class="col-sm-6">
            <input asp-for="GreenComponent" class="form-control" />
            <span asp-validation-for="GreenComponent" class="help-block"></span>
        </div>
    </div>
    <div class="form-group" maw-for="@Model.BlueComponent">
        <label asp-for="BlueComponent" class="col-sm-3 control-label"></label>
        <div class="col-sm-6">
            <input asp-for="BlueComponent" class="form-control" />
            <span asp-validation-for="BlueComponent" class="help-block"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
            <button type="submit" class="btn btn-default">Convert to Hex</button>
        </div>
    </div>
</form>

@if(!string.IsNullOrEmpty(Model.HexColorCode)) {
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            <div style="background-color: @Model.HtmlColorCode">&nbsp;</div>
        </div>
    </div>
}