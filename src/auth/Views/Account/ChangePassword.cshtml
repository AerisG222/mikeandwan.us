@model MawAuth.ViewModels.Account.ChangePasswordModel
@{
	Layout = "_LayoutSidebar";
	ViewBag.Title = "account | change password";
}

@section sidebar {
	<div class="card">
        <div class="card-body">
            <p>
				Password criteria:

				<ul>
					<li>8+ characters long</li>
					<li>6+ unique characters</li>
					<li>1+ lowercase</li>
					<li>1+ uppercase</li>
					<li>1+ digit</li>
					<li>1+ special character</li>
				</ul>
			</p>
        </div>
	</div>
}

@section header {
	<h1>Change Password</h1>
}

<div class="row">
	<div class="col-sm-8">
		@if(Model.ChangeSucceeded) {
			<p maw-alert-type="Success">Your password was updated successfully.</p>
		}
		else {
			if(Model.ChangeAttempted) {
				<p maw-alert-type="Danger">There was an error updating your password.</p>
				<div class="text-danger" asp-validation-summary="All"></div>
			}

			<form asp-controller="account" asp-action="changepassword" method="post" autocomplete="off" role="form">
				<div class="form-group">
					<label asp-for="CurrentPassword" class="col-form-label"></label>
					<input asp-for="CurrentPassword" class="form-control" autofocus="" />
					@*<span asp-validation-for="CurrentPassword" class="form-text"></span>*@
				</div>

				<div class="form-group">
					<label asp-for="NewPassword" class="col-form-label"></label>
					<input asp-for="NewPassword" class="form-control" />
					@*<span asp-validation-for="NewPassword" class="form-text"></span>*@
				</div>

				<div class="form-group">
					<label asp-for="ConfirmPassword" class="col-form-label"></label>
					<input asp-for="ConfirmPassword" class="form-control" />
					@*<span asp-validation-for="ConfirmPassword" class="form-text"></span>*@
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</form>
		}
	</div>
</div>
