@model MawMvcApp.ViewModels.Account.LoginModel
@{ 
	Layout = "_LayoutSidebar";
	ViewBag.Title = "account | login"; 
}

@section header {
    @Html.Partial("_PageHeader", "Login")
}

@section sidebar {
	<div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Help</h3>
        </div>
        <div class="panel-body">
            <a asp-controller="account" asp-action="forgotpassword">Forgot Password?</a>
        </div>
	</div>
}

@if(Model.WasAttempted) {
    <p maw-alert-type="Danger">There was an error logging in.  Please try again.</p>
}

<form asp-controller="account" asp-action="login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" autocomplete="off" role="form">
    <div class="form-group" maw-for="@Model.Username">
        <label asp-for="Username" class="col-sm-3 control-label"></label>
        <div class="col-sm-6">
            <input asp-for="Username" class="form-control" autofocus="" />
            <span asp-validation-for="Username" class="help-block"></span>
        </div>
	</div>

    <div class="form-group" maw-for="@Model.Password">
        <label asp-for="Password" class="col-sm-3 control-label"></label>
        <div class="col-sm-6">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="help-block"></span>
        </div>
	</div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
