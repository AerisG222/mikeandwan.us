@model MawMvcApp.ViewModels.Account.LoginModel
@{
	//Layout = "_Layout";
	ViewBag.Title = "account | login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-sm-5">
        @if(Model.WasAttempted) {
            <p maw-alert-type="Danger">There was an error logging in.  Please try again.</p>
            <div class="text-danger" asp-validation-summary="All"></div>
        }

        <form asp-controller="account" asp-action="login" method="post" autocomplete="off" role="form">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group mb-4">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" autofocus="" />
                @*<span asp-validation-for="Username" class="form-text"></span>*@
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                @*<span asp-validation-for="Password" class="form-text"></span>*@
            </div>

            <div class="form-group mb-4 row">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-5 offset-sm-2 d-flex justify-content-end">
                    <a asp-controller="account" asp-action="forgotpassword">Forgot Password?</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-5 offset-sm-2">
        <div class="row">
            <div class="col-12">
                <strong>or, login with an external account if you have opted-in:</strong>
            </div>
            @foreach(var scheme in Model.ExternalSchemes) {
                <div class="col-sm-6 mt-2">
                    <a class="btn btn-primary d-block"
                        asp-action="ExternalLogin"
                        asp-route-provider="@scheme.ExternalAuth.Name"
                        asp-route-returnUrl="@Model.ReturnUrl">
                        @if(scheme.Icon != null) {
                            <svg-icon class="mr-2" icon="@((SvgIcon)scheme.Icon)"></svg-icon>
                        }
                        @scheme.ExternalAuth.DisplayName
                    </a>
                </div>
            }
        </div>
    </div>
</div>
