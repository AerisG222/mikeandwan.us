@{
    ViewBag.Title = "custom shader";
    Layout = "_LayoutMinimal";
}

@section custom_head {
    <partial name="_css_site" />
    <style>
        body { margin: 0; padding: 0; width: 100vw; height: 100vh; overflow: hidden; }
        canvas { width: 100%; height: 100% }
        #container { margin-left: auto; margin-right: auto; }
    </style>
    <base href="/js/webgl_shader/" />
}

<environment names="Development">
    @* update the src below after running a build in the client app to see this on the dev site *@
    @*
        this is annoying but not worth making dynamic right now, and testing the client app is now
        easily done in the context of its own project thanks to vite
    *@
    <script type="module" crossorigin src="./assets/index-e97da4a4.js"></script>
</environment>
<environment exclude="Development">
    @* the following should be updated by the build script / containerfile *@
    <script type="module" crossorigin src="/js/webgl_shader/index.js"></script>
</environment>
