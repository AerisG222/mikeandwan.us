{
  "name": "client-apps-ng",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-learning-modernizr": "pnpm dlx modernizr -c projects/learning/modernizr-config.json -d projects/learning/src",
    "build-dev:binary-clock": "ng build binary-clock && ng lint binary-clock",
    "build-dev:googlemaps": "ng build googlemaps && ng lint googlemaps",
    "build-dev:learning": "pnpm run build-learning-modernizr & ng build learning && ng lint learning",
    "build-dev:memory": "ng build memory & ng lint memory",
    "build-dev:money-spin": "ng build money-spin && ng lint money-spin",
    "build-dev:weekend-countdown": "ng build weekend-countdown && ng lint weekend-countdown",
    "build-dev": "pnpm run build-dev:binary-clock && pnpm run build-dev:googlemaps && pnpm run build-dev:learning && pnpm run build-dev:memory && pnpm run build-dev:money-spin && pnpm run build-dev:weekend-countdown",
    "build-prod:binary-clock": "ng build binary-clock --configuration production",
    "build-prod:googlemaps": "ng build googlemaps --configuration production",
    "build-prod:learning": "pnpm run build-learning-modernizr & ng build learning --configuration production",
    "build-prod:memory": "ng build memory --configuration production",
    "build-prod:money-spin": "ng build money-spin --configuration production",
    "build-prod:weekend-countdown": "ng build weekend-countdown --configuration production",
    "build-prod": "pnpm run build-prod:binary-clock && pnpm run build-prod:googlemaps && pnpm run build-prod:learning && pnpm run build-prod:memory && pnpm run build-prod:money-spin && pnpm run build-prod:weekend-countdown"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.8",
