@{ 
    Layout = "_LayoutSidebar";
    ViewBag.Title = "tools | networking | file size"; 
}

@section custom_head {
    <base href="." />
}

@section scripts_footer {
    <script src="/js/bandwidth/vendor/es6-shim/es6-shim.js"></script>
    <script src="/js/bandwidth/vendor/reflect-metadata/Reflect.js"></script>
    <script src="/js/bandwidth/vendor/systemjs/dist/system.src.js"></script>
    <script src="/js/bandwidth/vendor/zone.js/dist/zone.js"></script>
    <script>
        SystemJS.config({
            baseURL: '/js/filesize'
        });

        System.import('system-config.js').then(function () {
            System.import('main');
        }).catch(console.error.bind(console));
    </script>
}
 
@section header {  
    @Html.Partial("_PageHeader", "File Size Calculator")
}

@section sidebar {
    @Html.Partial("_ToolSidebar", new SidebarModel() { Group = "networking", Item = "networking-file-size" })
}

