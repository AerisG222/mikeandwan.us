@using MawMvcApp.ViewModels.Admin
@model EditProfileModel
@{ ViewBag.Title = "admin | edit profile"; }

<h1>Edit User Profile</h1>

@Html.Partial("_identityResult", new IdentityResultModel("user profile", Model.Result))

<p>Please update the basic profile data for this user below, and then submit the changes.</p>

<form asp-controller="admin" asp-action="editprofile" method="post" autocomplete="off" role="form">
	<input asp-for="Username" type="hidden" />
	<div class="form-group row">
		<label asp-for="Username" class="col-sm-3 col-form-label"></label>
		<div class="col-sm-5">
			<label class="col-form-label">@Model.Username</label>
		</div>
	</div>
    <div class="form-group row" maw-for="@Model.FirstName">
		<label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-5">
			<input asp-for="FirstName" class="form-control" autofocus="" />
			<span asp-validation-for="FirstName" class="form-text"></span>
        </div>
	</div>
    <div class="form-group row" maw-for="@Model.LastName">
		<label asp-for="LastName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-5">
			<input asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="form-text"></span>
        </div>
	</div>
    <div class="form-group row" maw-for="@Model.Email">
		<label asp-for="Email" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-5">
			<input asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="form-text"></span>
        </div>
	</div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
