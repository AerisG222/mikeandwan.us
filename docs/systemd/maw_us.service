[Unit]
Description=mikeandwan.us web application

[Service]
EnvironmentFile=/etc/systemd/system/maw_us.env
WorkingDirectory=/srv/www/mikeandwan.us
ExecStart=/usr/bin/dotnet mikeandwan.us.dll
RuntimeDirectory=mikeandwan.us
RuntimeDirectoryMode=0775
Restart=always
RestartSec=10
SyslogIdentifier=maw
User=svc_www_maw
Group=svc_www_maw
UMask=002

[Install]
WantedBy=multi-user.target
