@model IEnumerable<string>
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "admin | manage roles";
}

@if(Model == null) {
    throw new InvalidOperationException("Model should not be null!");
}

@section body_head {
    <strong>Manage Roles</strong>
}

@section body_foot {
    <a asp-action="Index" asp-controller="Admin"><svg-icon icon="Cog"></svg-icon></a>
}

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Members</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        @foreach(string role in Model) {
            <tr>
                <td>@role</td>
                <td><a asp-controller="admin" asp-action="editrolemembers" asp-route-id="@role">Edit</a></td>
                <td><a asp-controller="admin" asp-action="deleterole" asp-route-id="@role">Delete</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
