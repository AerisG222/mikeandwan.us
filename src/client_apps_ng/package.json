    "@angular/language-service": "^17.0.8",
    "@types/google.maps": "^3.54.10",
    "@types/jasmine": "~5.1.4",
    "@types/jasminewd2": "~2.0.13",
    "@types/modernizr": "^3.5.6",
    "@types/node": "^20.10.5",
    "@types/three": "^0.160.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-plugin-import": "2.29.1",
