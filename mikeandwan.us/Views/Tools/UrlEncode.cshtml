@using MawMvcApp.ViewModels.Tools.Dotnet
@model UrlEncodeModel
@{ 
    Layout = "_LayoutSidebar";
    ViewBag.Title = "tools | url encoder / decoder"; 
}

@section header {
    @Html.Partial("_PageHeader", "URL Encoder / Decoder")
}

@section sidebar {
    @Html.Partial("_ToolSidebar", new SidebarModel() { Group = "dotnet", Item = "url-encode" })
}

<p>This page allows you to encode and decode values suitable for a querystring.</p>

<form asp-controller="tools" asp-action="urlencode" method="post" class="form-horizontal" autocomplete="off" role="form">
	<input type="hidden" name="Mode" value="@EncodeMode.Encode" />
	<div class="form-group" maw-for="@Model.DecodedString">
        <label asp-for="DecodedString" class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <textarea asp-for="DecodedString" rows="8" class="form-control" autofocus=""></textarea>
            <span asp-validation-for="DecodedString" class="help-block"></span>
        </div>
	</div>
	
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
            <button type="submit" class="btn btn-default">Encode</button>
        </div>
    </div>
</form>

<br/>

<form asp-controller="tools" asp-action="urlencode" method="post" class="form-horizontal" autocomplete="off" role="form">
	<input type="hidden" name="Mode" value="@EncodeMode.Decode" />
    <div class="form-group" maw-for="@Model.EncodedString">
        <label asp-for="EncodedString" class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <textarea asp-for="EncodedString" rows="8" class="form-control"></textarea>
            <span asp-validation-for="EncodedString" class="help-block"></span>
        </div>
	</div>
	
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
            <button type="submit" class="btn btn-default">Decode</button>
        </div>
    </div>
</form>
