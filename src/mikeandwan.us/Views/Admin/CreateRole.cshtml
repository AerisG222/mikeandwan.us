@using MawMvcApp.ViewModels.Admin
@model CreateRoleModel
@{ ViewBag.Title = "admin | create role"; }

<h1>Create Role</h1>

@Html.Partial("_identityResult", new IdentityResultModel("role", Model.Result))

@if(Model.Result == null || !Model.Result.Succeeded) {
	<form asp-controller="admin" asp-action="createrole" method="post" autocomplete="off" role="form">
		<div class="form-group row" maw-for="@Model.Name">
			<label asp-for="Name" class="col-sm-3 col-form-label"></label>
	        <div class="col-sm-3">
				<input asp-for="Name" class="form-control" autofocus="" />
				<span asp-validation-for="Name" class="form-text"></span>
	        </div>
		</div>
	    <div class="form-group row" maw-for="@Model.Description">
			<label asp-for="Description" class="col-sm-3 col-form-label"></label>
	        <div class="col-sm-3">
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="form-text"></span>
	        </div>
		</div>

	    <div class="form-group row">
	        <div class="offset-sm-3 col-sm-2">
	            <button type="submit" class="btn btn-primary">Submit</button>
	        </div>
	    </div>
	</form>
}
