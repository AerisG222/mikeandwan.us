@{ 
    Layout = "_LayoutSidebar";
    ViewBag.Title = "tools | weekend countdown"; 
}

@section custom_head {
    <base href="." />
}

@section scripts_footer {
    <script src="/js/weekend_countdown/vendor/es6-shim/es6-shim.js"></script>
    <script src="/js/weekend_countdown/vendor/reflect-metadata/Reflect.js"></script>
    <script src="/js/weekend_countdown/vendor/systemjs/dist/system.src.js"></script>
    <script src="/js/weekend_countdown/vendor/zone.js/dist/zone.js"></script>
    <script>
        SystemJS.config({
            baseURL: '/js/weekend_countdown'
        });

        System.import('system-config.js').then(function () {
            System.import('main');
        }).catch(console.error.bind(console));
    </script>
}

@section header {
    @Html.Partial("_PageHeader", "Weekend Countdown")
}

@section sidebar {
    @Html.Partial("_ToolSidebar", new SidebarModel() { Group = "general", Item = "weekend-countdown" })
}

