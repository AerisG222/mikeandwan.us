@model MawMvcApp.ViewModels.Tools.Dotnet.XmlValidateModel
@{ 
    Layout = "_LayoutSidebar";
    ViewBag.Title = "tools | xml validator";
}

@section header {
    @Html.Partial("_PageHeader", "XML Validator")
}

@section sidebar {
    @Html.Partial("_ToolSidebar", new SidebarModel() { Group = "dotnet", Item = "xml-validate" })
}

<p>
	This page allows you to validate the contents of an XML document, to make sure it is
	well formed, and optionally, that it adheres to the supplied DTD / XSD.
</p>

<form asp-controller="tools" asp-action="xmlvalidate" method="post" class="form-horizontal" autocomplete="off" role="form">
	<div class="form-group" maw-for="@Model.XmlSource">
		<label asp-for="XmlSource" class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
			<textarea asp-for="XmlSource" rows="8" class="form-control" autofocus=""></textarea>
			<span asp-validation-for="XmlSource" class="help-block"></span>
        </div>
	</div>
    <div class="form-group" maw-for="@Model.SchemaOrDtdSource">
		<label asp-for="SchemaOrDtdSource" class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
			<textarea asp-for="SchemaOrDtdSource" rows="8" class="form-control"></textarea>
			<span asp-validation-for="SchemaOrDtdSource" class="help-block"></span>
        </div>
	</div>
	
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
            <button type="submit" class="btn btn-default">Validate</button>
        </div>
    </div>
</form>

<br/>

@if(Model.ValidationAttempted) {
	if(!Model.AreErrors) {
		<p>
			<strong>The XML document is VALID!</strong>
		</p>
	}
	else {
		<p>Your XML document is not well formed.  The following outlines the errors encountered:</p>
		<pre>@Model.ValidationErrors</pre>
	}
}
