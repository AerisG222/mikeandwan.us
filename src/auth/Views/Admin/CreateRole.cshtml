@using MawAuth.ViewModels.Admin
@model CreateRoleModel
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "admin | create role";
}

@section body_head {
    <strong>Create Role</strong>
}

@section body_foot {
    <a asp-action="Index" asp-controller="Admin"><svg-icon icon="Cog"></svg-icon></a>
}

@{
    var resultModel = new IdentityResultModel("role", Model.Result);
}

<partial name="_identityResult" model="resultModel" />

@if(Model.Result == null || !Model.Result.Succeeded) {
	<form asp-controller="admin" asp-action="createrole" method="post" autocomplete="off" role="form">
		<div class="mb-3">
			<div class="input-group">
                <div class="input-group-text">
                    <svg-icon icon="Group"></svg-icon>
                </div>
                <input asp-for="Name" class="form-control" autofocus="" placeholder="Name" />
                @*<span asp-validation-for="Name" class="form-text"></span>*@
			</div>
		</div>
	    <div class="mb-3">
            <input asp-for="Description" class="form-control" placeholder="Description" />
            @*<span asp-validation-for="Description" class="form-text"></span>*@
		</div>

	    <div class="mb-3">
			<button type="submit" class="btn btn-primary btn-block">Create Role</button>
	    </div>
	</form>
}
